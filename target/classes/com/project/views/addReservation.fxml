                  <Label layoutX="40.0" layoutY="199.0" prefHeight="25.0" prefWidth="198.0" text="Telefon" />
                  <Label layoutX="40.0" layoutY="323.0" prefHeight="25.0" prefWidth="198.0" text="Zaliczka" />
