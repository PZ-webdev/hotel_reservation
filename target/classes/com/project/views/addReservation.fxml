                  <Button layoutX="389.0" layoutY="467.0" mnemonicParsing="false" text="Wyczyść" onAction="#clear"/>
                  <Label fx:id="textValidLabel" layoutX="300.0" layoutY="365.0" prefHeight="17.0" prefWidth="216.0" textFill="RED" />
                    </children>
                </Pane>
            </children>
        </VBox>
    </children>
</AnchorPane>
