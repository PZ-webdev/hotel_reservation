<AnchorPane stylesheets="@../css/style.css" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controllers.AddReservationController">
    <children>
        <VBox layoutX="-1.0" prefHeight="550.0" prefWidth="250.0" style="-fx-background-color: #3F2B63;">
            <children>
                <Pane prefHeight="122.0" prefWidth="266.0">
                    <children>
                        <ImageView fitHeight="122.0" fitWidth="250.0" layoutX="66.0" pickOnBounds="true" preserveRatio="true">
